<h1>To-Do List</h1>

<p>
    <a asp-controller="Tasks" asp-action="Add">Add Task</a>
</p>

@if (ViewBag.tasks.Count == 0)
{
    <p>Please enter a task!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        @foreach (var tsk in ViewBag.tasks)
        {
        <tr>
            <td>@tsk.Id</td>
            <td>@tsk.Name</td>
            <td>@tsk.Description</td>
        </tr>
        }
    </table>
}