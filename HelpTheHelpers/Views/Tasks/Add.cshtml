@using HelpTheHelpers.ViewModels;
@model AddTaskViewModel;

<h1>Add Task</h1>

<form asp-controller="Tasks" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContactNumber">Contact Number</label>
        <input asp-for="ContactNumber" />
        <span asp-validation-for="ContactNumber"></span>
    </div>
 
    <input type="submit" value="Add Task" />
</form>