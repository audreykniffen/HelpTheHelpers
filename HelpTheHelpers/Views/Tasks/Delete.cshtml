@{
}

<h1>Delete Task</h1>

<form method="post">
    @foreach (var tsk in ViewBag.tasks)
    {
        <div class="form-group">
            <label>
                <span>@tsk.Name</span>
                <input type="checkbox" name="taskIds" value="@tsk.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Tasks" class="btn btn-danger">

</form>