@model HelpTheHelpers.ViewModels.AddTaskTagViewModel

<h1>Add Helper to Task: @Model.ATask.Name</h1>

<form asp-controller="Helper" asp-action="AddTask" method="post">
    <input type="hidden" value="@Model.ATask.Id" name="TaskId" />
    <div class="form-group">
        <label asp-for="TagId">Tag</label>
        <select asp-for="TagId" asp-items="Model.Tags"></select>
        <span asp-validation-for="TagId"></span>
    </div>
    <input type="submit" value="Add Helper" />
</form>