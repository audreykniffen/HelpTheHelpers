@model Task<HelpTheHelpers.Models.TaskCategory>

<h1>All Helpers</h1>

@if (Model.Count == 0)
{
    <p>No Helpers yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Category Name</th>
        </tr>
        @foreach (TaskCategory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}
